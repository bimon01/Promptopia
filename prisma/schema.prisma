generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model prompts {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  creator String @db.ObjectId
  image_url String? @default("null")
  prompt  String
  tag     String
  v       Int? @default(0) @map("__v")
  user    users    @relation(fields: [creator], references: [id])
}

model users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique 
  username String
  image    String
  v        Int? @default(0) @map("__v")
  prompts  prompts[]
}
